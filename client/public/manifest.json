{
  "name": "VitalWatch - Emergency Protection",
  "short_name": "VitalWatch",
  "id": "/?v=7.0.0",
  "start_url": "/?source=a2hs&v=7.0.0",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#8b5cf6",
  "version": "7.0.0",
  "description": "AI-powered emergency monitoring and mental health support with real-time crisis detection",
  "display_override": ["window-controls-overlay", "standalone"],
  "prefer_related_applications": false,
  "orientation": "portrait-primary",
  "lang": "en",
  "dir": "ltr",
  "categories": ["health", "medical", "lifestyle", "safety"],
  "screenshots": [
    {
      "src": "/icons/screenshot-phone-1.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Emergency monitoring dashboard"
    },
    {
      "src": "/icons/screenshot-phone-2.png", 
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mood tracking and wellness tools"
    },
    {
      "src": "/icons/screenshot-tablet-1.png",
      "sizes": "1280x800", 
      "type": "image/png",
      "form_factor": "wide",
      "label": "Admin dashboard overview"
    }
  ],
  "icons": [
    { 
      "src": "/icons/icon-192x192.png", 
      "sizes": "192x192", 
      "type": "image/png" 
    },
    { 
      "src": "/icons/icon-512x512.png", 
      "sizes": "512x512", 
      "type": "image/png" 
    },
    { 
      "src": "/icons/icon-512x512-maskable.png", 
      "sizes": "512x512", 
      "type": "image/png", 
      "purpose": "maskable" 
    }
  ],
  "shortcuts": [
    {
      "name": "Emergency Alert",
      "short_name": "Emergency", 
      "description": "Instantly send emergency alert to contacts",
      "url": "/home?action=emergency",
      "icons": [
        {
          "src": "/icons/shortcut-emergency.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mood Check-in",
      "short_name": "Mood",
      "description": "Quick mood tracking entry",
      "url": "/mood",
      "icons": [
        {
          "src": "/icons/shortcut-mood.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Breathing Exercise",
      "short_name": "Breathe",
      "description": "Start guided breathing exercise",
      "url": "/tools?tool=breathing",
      "icons": [
        {
          "src": "/icons/shortcut-breathing.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*", "audio/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "tel",
      "url": "/emergency?number=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"],
        "audio/*": [".mp3", ".wav", ".m4a"],
        "video/*": [".mp4", ".mov", ".avi"]
      },
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "widgets": [
    {
      "name": "Emergency Status",
      "short_name": "Emergency",
      "description": "Quick access to emergency features",
      "tag": "emergency-widget",
      "ms_ac_template": "/widgets/emergency.json",
      "data": "/widgets/emergency-data.json",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/icons/widget-emergency.png",
          "sizes": "512x512",
          "label": "Emergency widget preview"
        }
      ],
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ]
}