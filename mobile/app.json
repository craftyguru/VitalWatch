{
  "expo": {
    "name": "VitalWatch",
    "slug": "vitalwatch-native",
    "version": "7.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3b82f6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vitalwatch.app",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "VitalWatch needs Bluetooth to connect to your health devices.",
        "NSBluetoothPeripheralUsageDescription": "VitalWatch needs Bluetooth to connect to your health devices."
      }
    },
    "android": {
      "package": "app.vitalwatch.www.twa",
      "versionCode": 10,
      "edgeToEdge": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3b82f6"
      },
      "permissions": [
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_ADVERTISE",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT"
      ]
    },
    "plugins": [
      "expo-system-ui",
      "react-native-ble-plx",
      "expo-dev-client"
    ],
    "scheme": "vitalwatch",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "9e0254f5-7b42-4e1a-ae4e-5e37e15b2386"
      }
    }
  }
}
